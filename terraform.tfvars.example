# Example Terraform variables file
# Copy this file to terraform.tfvars and update with your values

# Akamai Security Configuration
security_config_name = "jgrinwis-sc"
group_name           = "Akamai Demo-M-1YX7F61"

# Security Policy IDs (get these from Akamai Control Center)
security_policy_low    = "ewcr_207932"
security_policy_medium = "6666_76098"
security_policy_high   = "0000_68583"

# Non-Terraform managed hostnames (hostnames in the security config not managed by TF)
non_tf_managed_hosts = ["ew.grinwis.com"]

# Data Source Configuration
# Set to true for testing with mock data, false for production with Terraform Cloud
use_mock_data = true

