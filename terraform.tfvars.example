# Example Terraform variables file
# Copy this file to terraform.tfvars and update with your values

# Akamai Security Configuration
security_config_name = "security-config-name"
group_name           = "group-name"

# Security Policy IDs (get these from Akamai Control Center)
security_policy_low    = "ewcr_207932"
security_policy_medium = "6666_76098"
security_policy_high   = "0000_68583"

# Non-Terraform managed hostnames (hostnames in the security config not managed by TF)
# Hostnames will be removed from the Security Configuration if not in this list and not managed by Terraform!
non_tf_managed_hosts = ["ignore.example.com"]

# Data Source Configuration
# Set to true for testing with mock data, false for production with Terraform Cloud
use_mock_data = true

# Terraform Cloud Configuration (only used when use_mock_data = false)
# tfe_organization = "your-organization"
# tfe_workspace    = "your-workspace"
